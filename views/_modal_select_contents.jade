script(type="text/ng-template" id="selectContent.html")
  div.modal-header
    h3.modal-title Select contents
  div.modal-body
    list-group(items="contents" selectable="multiple" template-url="viewTemplate" selected-items="selectedContents")
  div.modal-footer
    button.btn.btn-primary(type="button" ng-click="ok()") OK
    button.btn.btn-warning(type="button" ng-click="cancel()") Cancel
